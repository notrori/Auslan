<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Auslan.glossary">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Glossary of Signs" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />
            <Button x:Name ="ButtonGlossary" Text="Alphabet" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Clicked="Alphabet" />
            <Button x:Name ="ButtonNum" Text="Numbers" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Clicked="Numbers" />
            <Button x:Name ="ButtonGreet" Text="Greetings" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Clicked="Greeting" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>